extends ../layout

block content
    .container

        h1 用户#{title}

        form.form-horizontal(action="/users/add/user",method="post")
            if user._id
                input.form-control(type="hidden",name="_id",value="#{user._id }")
            .form-group
                label.col-sm-2.control-label 姓名:
                .col-sm-4
                    input.form-control(type="text",name="username",value="#{user.username || '' }")

            .form-group
                label.col-sm-2.control-label 邮箱:
                .col-sm-4
                    input.form-control(type="email",name="email",value="#{user.email || '' }")

            .form-group
                label.col-sm-2.control-label 年龄:
                .col-sm-4
                    input.form-control(type="text",name="age",value="#{user.age || '' }")

            .form-group
                label.col-sm-2.control-label 性别:
                .col-sm-4
                    label.radio-inline
                        input(type="radio",name="sex",checked="checked",value="#{user.sex || 1 }")
                        | 男
                    label.radio-inline
                        input(type="radio",name="sex",value="#{user.sex || 0 }")
                        | 女

            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-success(type="submit") Submit
